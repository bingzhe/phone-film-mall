<view style="margin-top: 2%; text-align: center">
  <van-image width="50" height="50" round src="/images/use/search-btn.jpg" />
</view>

<view class="login-wrapper">
  <input
    class="loginInput"
    placeholder="手机号"
    placeholder-class="placeholderClass"
    value="{{ username }}"
    bindinput="bindUsernameInput"
  />

  <input
    class="loginInput"
    placeholder="邀请ID"
    placeholder-class="placeholderClass"
    value="{{ invitation_id }}"
    bindinput="bindInvitationIdInput"
  />

  <input
    class="loginInput"
    type="password"
    placeholder="密码"
    placeholder-class="placeholderClass"
    value="{{ password }}"
    bindinput="bindPasswordInput"
  />

  <input
    class="loginInput"
    placeholder="公司名"
    placeholder-class="placeholderClass"
    value="{{ company_name }}"
    bindinput="bindCompanyNameInput"
  />

  <input
    class="loginInput"
    placeholder="姓名"
    placeholder-class="placeholderClass"
    value="{{ name }}"
    bindinput="bindNameInput"
  />

  <picker
    bindchange="provinceChange"
    value="{{ pIndex }}"
    range="{{ provinces }}"
    range-key="name"
  >
    <!-- prettier-ignore-attribute -->
    <view
      class="loginInput {{provinces[pIndex].name=='请选择省份'?'placeholderClass':''}}"
    >
      {{ provinces[pIndex].name }}
    </view>
    <!-- bindinput="bindAddressInput" -->
  </picker>

  <picker
    wx:if="{{ cities }}"
    bindchange="cityChange"
    value="{{ cIndex }}"
    range="{{ cities }}"
    range-key="name"
  >
    <!-- prettier-ignore-attribute -->
    <view
      class="loginInput {{cities[cIndex].name=='请选择城市'?'placeholderClass':''}}"
      >{{ cities[cIndex].name }}</view
    >
  </picker>
  <picker
    wx:if="{{ areas }}"
    bindchange="areaChange"
    value="{{ aIndex }}"
    range="{{ areas }}"
    range-key="name"
  >
    <!-- prettier-ignore-attribute -->
    <view
      class="loginInput {{areas[aIndex].name=='请选择区县'?'placeholderClass':''}}"
      >{{ areas[aIndex].name }}</view
    >
  </picker>

  <input
    class="loginInput"
    placeholder="详细地址"
    placeholder-class="placeholderClass"
    value="{{ address }}"
    bindinput="bindAddressInput"
  />

  <view class="login_button" bindtap="registerAction">注册</view>

  <view class="agreen_tip">
    <van-checkbox
      value="{{ checked }}"
      shape="square"
      bind:change="onCheckChange"
      checked-color="#23b7eb"
    ></van-checkbox>
    <view class="agreen_font"
      >我已阅读并同意
      <text class="active_font" catchtap="gotoPrivacy">《隐私政策》、</text
      ><text class="active_font" catchtap="gotoUser">《用户协议》</text></view
    >
  </view>
</view>
