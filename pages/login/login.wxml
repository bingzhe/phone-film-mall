<view style="margin-top: 10%; text-align: center;">
  <van-image width="100" height="100" round src="/images/use/search-btn.jpg" />
</view>

<view class="login-wrapper">
  <input
    class="loginInput"
    placeholder="手机号"
    placeholder-class="placeholderClass"
    value="{{ username }}"
    bindinput="bindUsernameInput"
  />

  <input
    class="loginInput"
    type="password"
    placeholder="密码"
    placeholder-class="placeholderClass"
    value="{{ password }}"
    bindinput="bindPasswordInput"
  />

  <view class="register-wrapper">
    <text bindtap="goRegister">去注册</text>
  </view>

  <view class="login_button" bindtap="loginUser">登录</view>

  <view class="agreen_tip">
    <van-checkbox
      value="{{ checked }}"
      shape="square"
      bind:change="onCheckChange"
      checked-color="#23b7eb"
    ></van-checkbox>
    <view class="agreen_font"
      >我已阅读并同意
      <text class="active_font" catchtap="gotoPrivacy">《隐私政策》、</text
      ><text class="active_font" catchtap="gotoUser">《用户协议》</text></view
    >
  </view>
</view>
