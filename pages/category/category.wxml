<van-search
  value="{{ name }}"
  placeholder="请输入搜索关键词"
  shape="round"
  bind:search="bindconfirm"
  use-right-icon-slot
>
</van-search>
<view class="main">
  <scroll-view
    class="category-container"
    scroll-y="true"
    scroll-with-animation="true"
  >
    <!-- scroll-into-view="{{ aaa }}" -->
    <van-sidebar custom-class="sidebar-l" active-key="{{ activeCategory }}">
      <van-sidebar-item
        wx:if="{{ item.level == 1 }}"
        id="category{{ item.category_id }}"
        wx:for="{{ firstCategories }}"
        wx:key="category_id"
        data-idx="{{ index }}"
        bindtap="onCategoryClick"
        title="{{ item.cate_name }}"
      ></van-sidebar-item>
    </van-sidebar>
  </scroll-view>
  <scroll-view
    class="goods-container"
    scroll-y="true"
    scroll-top="{{ scrolltop }}"
    wx:if="{{ onLoadStatus }}"
    bindscrolltolower="goodsGoBottom"
  >
    <!-- style="white-space: nowrap" -->
    <scroll-view scroll-x="true">
      <view class="second-cate-wrapper">
        <!-- prettier-ignore-attribute -->
        <view
          class="second-cate-item {{ secondCategorySelected.category_id === item.category_id? 'second-select' : ''}}"
          wx:for="{{ secondCategories }}"
          wx:key="category_id"
          data-idx="{{ index }}"
          bindtap="onSecondCategoryClick"
        >
          {{ item.cate_name }}
        </view>
      </view>
    </scroll-view>
    <!-- is-link -->
    <!-- url="/pages/goods/list?categoryId={{ categorySelected.category_id }}" -->
    <view class="small-category-box">
      <view class="list1" wx:for="{{ goods }}" wx:key="id">
        <navigator url="{{ item.goodsUrl }}"
          ><image class="img" mode="aspectFill" src="{{ item.pic }}"></image
        ></navigator>
        <view class="goods-info">
          <view class="title ellipsis"
            ><navigator url="{{ item.goodsUrl }}">{{
              item.goods_name
            }}</navigator></view
          >
          <!-- <view wx:if="{{item.characteristic}}" class="characteristic van-multi-ellipsis--l2" style="padding:0;-webkit-line-clamp: 1;">{{item.characteristic}}</view> -->
          <view class="buy-info">
            <!-- <view class="num">库存{{ item.stock }}</view> -->
            <!-- <view class="num">销量{{ item.sales }}</view> -->
            <van-icon
              class="car"
              name="shopping-cart-o"
              color="#e64340"
              size="48rpx"
              data-id="{{ item.goods_id }}"
              bind:click="addShopCar"
            ></van-icon>
          </view>
          <view class="price">
            ¥ {{ item.goods_price
            }}<text
              wx:if="{{ item.originalPrice && item.originalPrice > 0 }}"
              class="originalPrice"
              >¥ {{ item.originalPrice }}</text
            >
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

<goods-pop skuCurGoodsBaseInfo="{{ skuCurGoods }}"></goods-pop>

<view class="service-icon-wrapper">
  <van-icon name="phone-circle-o" size="40px" color="#999" bind:click="kefuCallPhone" />
</view>